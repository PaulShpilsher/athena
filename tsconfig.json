{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "./build",
        "baseUrl": ".",
        "module": "commonjs",
        "target": "esnext",
        "allowJs": true,
        "sourceMap": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
    },
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules"
    ]
  }